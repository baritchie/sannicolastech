<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://use.typekit.net/sxw5bam.css">
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@2.x.x/dist/alpine.min.js" defer></script>
    <script src="https://kit.fontawesome.com/861df2df43.js" crossorigin="anonymous"></script>
    {% seo %}
</head>

<body class="flex flex-col scroll tk-loos-normal font-normal">
    <header>
        <nav class="flex items-center justify-between flex-wrap p-6 sticky w-full z-10 top-0 transition-colors duration-300 ease-in-out"
            x-data="{ isOpen: false }" @keydown.escape="isOpen = false"
            :class="{ 'shadow-lg bg-blue-600' : isOpen , 'bg-blue-900' : !isOpen}">
            <!--Logo etc-->
            <div class="flex items-center flex-shrink-0 text-white mr-6">
                <a class="text-white no-underline hover:text-white hover:no-underline" href="{{ page | relative }}">
                    <span class="text-2xl pl-2"><i class="fas fa-terminal"></i> San Nicolas Tech</span>
                </a>
            </div>
            <!--Toggle button (hidden on large screens)-->
            <button @click="isOpen = !isOpen" type="button"
                class="block lg:hidden px-2 text-white hover:text-white focus:outline-none focus:text-gray-200"
                :class="{ 'transition transform-180': isOpen }">
                <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path x-show="isOpen" fill-rule="evenodd" clip-rule="evenodd"
                        d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z" />
                    <path x-show="!isOpen" fill-rule="evenodd"
                        d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z" />
                </svg>
            </button>

            <!--Menu-->
            <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
                :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }" @click.away="isOpen = false"
                x-show.transition="true">
                <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">
                    <li class="mr-3">
                        <a class="inline-block py-2 px-4 hover:text-gray-400 text-white no-underline"
                            href="{{ page | relative }}#portfolio" @click="isOpen = false">Portfolio
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block text-white hover:text-gray-400 no-underline hover:text-underline py-2 px-4"
                            href="{{ page | relative }}#testimonials" @click="isOpen = false">Testimonials
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block text-white hover:text-gray-400 no-underline hover:text-underline py-2 px-4"
                            href="{{ page | relative }}#contact" @click="isOpen = false">Contact
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="h-80 bg-opacity-50 bg-black flex items-center justify-center bg-cover" style="background-image: linear-gradient(rgba(0, 0, 0, 0.45), 
            rgba(0, 0, 0, 0.45)),url('{{ page | relative }}{{ hero_img }}');background-position: center;">
            <div class="mx-2 text-center">
                <h1 class="text-5xl text-white">
                    {{ hero_text }}
                </h1>
                <h2 class="text-white">
                    {{ hero_sub }}
                </h2>
            </div>
        </div>
    </header>
    <main class="w-3/4 m-auto">
        {{ content | safe }}
    </main>
    <footer class="flex justify-center w-full bg-blue-900 text-white transition-colors duration-300 ease-in-out p-6">
        Copyright &copy; San Nicolas Tech {% year %}
    </footer>
</body>

</html>